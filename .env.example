# Iris endpoints
IRIS_BASE_URL=https://example.com
IRIS_WS_URL=wss://example.com/ws

# Required headers (provide real values; do not commit secrets)
X_USER_ID=
X_USER_EMAIL=
X_SESSION_ID=

# Chess bot
BOT_PREFIX=!chess
ALLOW_RANDOM_MATCH=false
MAX_CONCURRENT_GAMES=200
TIME_CONTROL=none

# Limit bot to specific rooms (comma-separated). Empty â†’ allow all rooms.
ALLOWED_ROOMS=449425116149655

# Data stores (application connection strings)
# REDIS_URL format: redis://:password@host:port/db
REDIS_URL=redis://:password@localhost:6379/0

# DATABASE_URL format for Postgres
DATABASE_URL=postgres://chessbot:password@localhost:5432/chessbot?sslmode=disable

# Chess engine and options
# Path to the Stockfish binary (required)
STOCKFISH_PATH=/usr/local/bin/stockfish
# Default preset for chess (level1~level8)
CHESS_DEFAULT_PRESET=level3
# Session TTL in seconds
CHESS_SESSION_TTL=3600
# Max number of history items user can request
CHESS_HISTORY_LIMIT=10
# Opening book preferences (optional)
CHESS_OPENING_MAX_PLY=12
CHESS_OPENING_MIN_WEIGHT=1
CHESS_OPENING_DEFAULT_STYLE=

# Do not commit a real .env file. Use this as a template.
